# Synapse — Root Environment Variables
# Copy this to .env and fill in your values.

# ─── Database ───────────────────────────────────────
POSTGRES_USER=synapse
POSTGRES_PASSWORD=synapse_dev
POSTGRES_DB=synapse
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://synapse:synapse_dev@localhost:5432/synapse

# ─── Redis ──────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── Backend ────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:5173"]
SECRET_KEY=change-me-to-a-random-string-in-production
ENCRYPTION_KEY=change-me-32-byte-key-for-aes256

# ─── Frontend ───────────────────────────────────────
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_BASE_URL=ws://localhost:8000

# ─── LLM Providers (add as needed) ─────────────────
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
DEEPSEEK_API_KEY=
OPENROUTER_API_KEY=