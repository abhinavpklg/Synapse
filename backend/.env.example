# Synapse Backend — Environment Variables
# Copy to .env: cp .env.example .env

# ─── Application ────────────────────────────────────
APP_NAME=synapse
APP_VERSION=0.1.0
DEBUG=true

# ─── Server ─────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=["http://localhost:5173"]

# ─── Database ───────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://synapse:synapse_dev@localhost:5432/synapse

# ─── Redis ──────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── Security ───────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-in-production
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=change-me-generate-a-real-fernet-key

# ─── LLM Providers (optional — can also be set via UI) ──
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
DEEPSEEK_API_KEY=
OPENROUTER_API_KEY=